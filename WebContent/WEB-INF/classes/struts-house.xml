<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
	<package name="edu.housesearcher.web.search" namespace="/house" extends="struts-default">
		<global-allowed-methods>execute,login</global-allowed-methods>
		<action name="search-houses" class="edu.housesearcher.web.action.SearchHouseAction" method="execute" >
			<result name="success" >/pages/house-list.jsp </result>
		</action>
		
		<action name="house-details" class="edu.housesearcher.web.action.ShowHouseDetailsAction" method="execute"  >
			<result name="success">/pages/dtl.jsp</result>
		</action>
	</package>
</struts>