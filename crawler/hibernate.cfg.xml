<hibernate-configuration>
 <session-factory name="">
  <!-- 打开二级缓存 
 <property name="hibernate.cache.use_second_level_cache">true</property> 
 指定session factory class -->
  <property name="hibernate.cache.region.factory_class">org.hibernate.cache.ehcache.EhCacheRegionFactory</property>
  <!-- 显示SQL语句 -->
  <property name="show_sql">false</property>
  <!-- 格式化SQL语句 -->
  <property name="format_sql">false</property>
  <!-- 指定方言 -->
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
  <!-- 数据库驱动 -->
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <!-- 数据库连接url -->
  <property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/certificate?useUnicode=true&amp;characterEncoding=utf8</property>
  <!-- 数据库用户名 -->
  <property name="hibernate.connection.username">certificate</property>
  <!-- 数据库用户的密码 -->
  <property name="hibernate.connection.password">certificate</property>
  <!-- 自动创建表 -->
  <property name="hibernate.hbm2ddl.auto">update</property>
 </session-factory>
</hibernate-configuration>
